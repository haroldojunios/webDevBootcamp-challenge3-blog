<%- include("partials/header"); -%>

<h1>Home</h1>

<p><%= startingContent %></p>

<% posts.forEach(function(post) {%>
<h1><%= post.title %></h1>
<p>
  <% if(post.body.length < 100) { %>
  <%= post.body %>
  <% } else { %>
  <%= post.body.substring(0,100) + "..." %>
  <% } %>
  <a href="/posts/<%= post.title %>">Read more</a>
</p>
<% }); %>

<%- include("partials/footer"); -%>
